{
  "name": "xhtm",
  "version": "0.0.2",
  "description": "HTML Tagged Template syntax for Virtual DOM. Extension of HTM with HTML support.",
  "main": "dist/xhtm.js",
  "umd:main": "dist/xhtm.umd.js",
  "module": "dist/xhtm.module.js",
  "scripts": {
    "start": "parcel serve --no-hmr test/index.html",
    "build": "npm run -s build:main && npm run -s build:mini",
    "build:main": "microbundle src/index.js -f es,umd --no-sourcemap --target web",
    "build:mini": "microbundle src/index.js -o ./mini/index.js -f es,umd --no-sourcemap --target web --alias ./constants.js=./constants-mini.js",
    "test": "node -r esm test.js",
    "test:perf": "v8 test/__perftest.js",
    "release": "npm t && git commit -am \"$npm_package_version\" && git tag $npm_package_version && git push && git push --tags && npm publish"
  },
  "files": [
    "dist",
    "mini",
    "src"
  ],
  "repository": "dy/xhtm",
  "keywords": [
    "Hyperscript Tagged Markup",
    "tagged template",
    "template literals",
    "html",
    "htm",
    "jsx",
    "virtual dom",
    "hyperscript"
  ],
  "author": "Dmitry Yv <df.creative@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/dy/xhtm",
  "devDependencies": {
    "@babel/preset-env": "^7.7.4",
    "esm": "^3.2.25",
    "microbundle": "^0.11.0",
    "tape": "^4.11.0"
  }
}
